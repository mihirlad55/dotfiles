# Increase volume
"pactl set-sink-volume @DEFAULT_SINK@ +1000"
   XF86AudioRaiseVolume

"pactl set-sink-volume @DEFAULT_SINK@ +1000"
    m:0x9 + c:21
    Shift+Alt + equal

# Decrease volume
"pactl set-sink-volume @DEFAULT_SINK@ -1000"
   XF86AudioLowerVolume

"pactl set-sink-volume @DEFAULT_SINK@ -1000"
    m:0x9 + c:20
    Shift+Alt + minus

# Mute volume
"pactl set-sink-mute @DEFAULT_SINK@ toggle"
   XF86AudioMute

# Increase backlight
"xbacklight -inc 5"
   XF86MonBrightnessUp

"xbacklight -inc 5"
    m:0x41 + c:21
    Shift+Mod4 + equal

# Decrease backlight
"xbacklight -dec 5"
   XF86MonBrightnessDown

"xbacklight -dec 5"
    m:0x41 + c:20
    Shift+Mod4 + minus

