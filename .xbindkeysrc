# Increase volume
"pactl set-sink-volume @DEFAULT_SINK@ +1000"
   XF86AudioRaiseVolume

"pactl set-sink-volume @DEFAULT_SINK@ +1000"
    m:0x9 + c:21
    Shift+Alt + equal

# Decrease volume
"pactl set-sink-volume @DEFAULT_SINK@ -1000"
   XF86AudioLowerVolume

"pactl set-sink-volume @DEFAULT_SINK@ -1000"
    m:0x9 + c:20
    Shift+Alt + minus

# Mute volume
"pactl set-sink-mute @DEFAULT_SINK@ toggle"
   XF86AudioMute

# Increase backlight
"light -A 5"
   XF86MonBrightnessUp

"light -A 5"
    m:0x41 + c:21
    Shift+Mod4 + equal

# Decrease backlight
"light -U 5"
   XF86MonBrightnessDown

"light -U 5"
    m:0x41 + c:20
    Shift+Mod4 + minus

# Rofi
"~/.scripts/rofi/drun"
    Mod1+d
"~/.scripts/rofi/drun"
   XF86Search
"~/.scripts/rofi/rofi-run"
    Mod1+s

# Rofi Finder
"~/.scripts/rofi/rofi-finder"
    Mod1+Control+f

# Rofi Scripts
"~/.scripts/rofi/rofi-scripts"
    Mod1+Control+s

# Rofi Calculator Right
"~/.scripts/rofi/rofi-qalc-right"
    Mod1+c

# Rofi Calculator Left
"~/.scripts/rofi/rofi-qalc-left"
    Mod1+Shift+c


# Screenshot region
"~/.scripts/screenshot-region"
    m:0x1 + c:107
    Shift + Print


# Spotify
"dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause"
    XF86AudioPlay

"dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Next"
	XF86AudioNext

"dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Previous"
	XF86AudioPrev

# Lock Screen (Super_L + l)
"xautolock -locknow"
    Mod4+l

# Toggle xautolock (Super_L + Shift + l)
"~/.scripts/lock toggle"
    Mod4+Shift+l

# Rofi lastpass
"~/.scripts/rofi/rofi-lastpass type"
    Mod1+p
"~/.scripts/rofi/rofi-lastpass copy"
    Mod1+Shift+p

# Restart WiFi
"sudo systemctl restart wpa_supplicant@wlp2s0.service"
    Mod4+r

# Map to monitor
"~/.scripts/map-touch-to-screen -c"
    Mod4+p

# Kill focused window process
"~/.scripts/kill-window-process"
    m:0xd + c:24
    Control+Shift+Alt + q
