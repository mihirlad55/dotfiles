[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over
;pseudo-transparency = false

[global/wm]
margin-top = 0
margin-bottom = 0



[colors]
background = ${xrdb:polybar.background} 
background-alt = ${xrdb:polybar.background-alt}

foreground = ${xrdb:polybar.foreground}
foreground-alt = ${xrdb:polybar.foreground-alt}

primary = ${xrdb:polybar.primary}
secondary = ${xrdb:polybar.secondary}
tertiary = ${xrdb:polybar.tertiary}
quaternary = ${xrdb:polybar.quaternary}
quinary = ${xrdb:polybar.quinary}

icon = ${xrdb:polybar.icon}
alert = ${xrdb:polybar.alert}

ws-focused-background = ${xrdb:polybar.ws-focused-background}
ws-focused-underline = ${xrdb:polybar.ws-focused-underline}

spotify = #1db954



[bar/main]
monitor = ${env:MONITOR:}
monitor-fallback = eDP1
monitor-strict = false
width = 80%
height = 36
offset-x = 20%
;offset-y = 1%
radius = 0
fixed-center = true

enable-ipc = true
background = ${colors.background}
foreground = ${colors.foreground}

line-size = 6
line-color = ${colors.icon}

padding= 1

font-0 = Liberation Mono:size=9;2
font-1 = Font Awesome 5 Free:size=10;2
font-2 = Font Awesome 5 Free Solid:size=10;2
font-3 = Font Awesome 5 Brands:size=10;2
font-4 = Weather Icons:size=10;2
font-5 = Material Icons:size=11;4

modules-right = spotify previous playpause next sep termdown sep updates sep weather-icon weather-temp sep xbacklight sep pulseaudio sep filesystem sep memory sep cpu cpu-speed sep temperature sep openvpn wlan eth sep battery sep date time restart lock powermenu

tray-position = right
tray-padding = 2

override-redirect = true

cursor-click = pointer
cursor-scroll = ns-resize



[module/termdown]
type = custom/script
interval = 1

exec-if = [[ -f "/tmp/termdown" ]]
exec = cat /tmp/termdown
tail = false

label = %output%

format = <label>

format-prefix = 
format-prefix-font = 6
format-prefix-padding-right = 1
format-prefix-foreground = ${colors.icon}

format-padding = 1
format-background = ${colors.background-alt}
format-overline = ${colors.background}
format-underline = ${colors.background}



[module/spotify]
type = custom/ipc

hook-0 = echo ""
hook-1 = spotifyctl -q status
initial = 1

format-prefix = 
format-prefix-padding-right = 1
format-prefix-font = 2

format-padding = 1



[module/previous]
type = custom/ipc

click-left = "spotifyctl -q previous"
hook-0 = echo
hook-1 = echo 

format-font = 6
format-padding = 1



[module/playpause]
type = custom/ipc

click-left = "spotifyctl playpause"
; Default
hook-0 = echo
; Playing
hook-1 = echo 
; Paused
hook-2 = echo 
initial = 1

format-font = 6



[module/next]
type = custom/ipc

click-left = "spotifyctl -q next"
hook-0 = echo
hook-1 = echo 

format-font = 6
format-padding = 1



[module/updates]
type = custom/script
interval = 3600

click-left = st sh -c 'yay -Syu; sh'
exec = echo $(yay -Pu | wc -l)
exec-if = [  $(yay -Pu | wc -l) -ne "0" ]
tail = true

label = %output%

format = <label>
format-prefix = 
format-prefix-padding-right = 1
format-prefix-font = 6
format-prefix-foreground = ${colors.icon}
format-prefix-background = ${colors.background-alt}
format-padding = 1
format-foreground = ${colors.foreground}
format-background = ${colors.background-alt}
format-overline = ${colors.background}
format-underline = ${colors.background}



