[module/cpu-speed]
type=custom/script
interval = 1
format-margin = 2
format-prefix = ""
format-prefix-font = 2
format-prefix-padding-right = 2
format-prefix-foreground = ${colors.icon}

label = %output%


exec = ~/.scripts/cpu-speed



[module/wlan]
type = internal/network
interface = wlp2s0
interval = 3.0

format-connected-margin = 2
format-connected = <ramp-signal> <label-connected>

label-connected = %essid%: %local_ip%
label-connected-foreground = ${colors.foreground}

format-disconnected =
;format-disconnected = <label-disconnected>
;format-disconnected-underline = ${self.format-connected-underline}
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${colors.foreground-alt}

ramp-signal-0 = 
ramp-signal-1 = 
ramp-signal-2 = 
ramp-signal-foreground = ${colors.icon}
ramp-signal-padding-left = 0
ramp-signal-padding-right = 2


[module/openvpn]
type = custom/script
interval = 3.0

exec-if = systemctl list-units | grep openvpn-client | grep running
format-prefix-foreground = ${colors.icon}
format-foreground = ${colors.foreground}
format-prefix = "  "
format-margin = 2
exec = systemctl list-units | grep openvpn-client | grep running | awk '{print $1};' | cut -d '@' -f2 | cut -d '.' -f1 


[module/eth]
type = internal/network
interface = enp3s0
interval = 3.0

format-connected-margin = 2
format-connected-underline = ${colors.quaternary}
format-connected-prefix = " "
format-connected-prefix-foreground = ${colors.icon}

label-connected = %local_ip%
label-connected-foreground = ${colors.foreground}

format-disconnected =
;format-disconnected = <label-disconnected>
;format-disconnected-underline = ${self.format-connected-underline}
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${colors.foreground-alt}


