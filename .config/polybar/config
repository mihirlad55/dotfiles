[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over
;pseudo-transparency = false

[global/wm]
margin-top = 0
margin-bottom = 0

[colors]
background = ${xrdb:polybar.background} 
background-alt = ${xrdb:polybar.background-alt}

foreground = ${xrdb:polybar.foreground}
foreground-alt = ${xrdb:polybar.foreground-alt}

primary = ${xrdb:polybar.primary}
secondary = ${xrdb:polybar.secondary}
tertiary = ${xrdb:polybar.tertiary}
quaternary = ${xrdb:polybar.quaternary}
quinary = ${xrdb:polybar.quinary}

icon = ${xrdb:polybar.icon}
alert = ${xrdb:polybar.alert}

ws-focused-background = ${xrdb:polybar.ws-focused-background}
ws-focused-underline = ${xrdb:polybar.ws-focused-underline}

spotify = #1db954

[bar/main]
monitor = ${env:MONITOR:}
width = 60%
height = 27
offset-x = 40%
;offset-y = 1%
radius = 0
fixed-center = false

enable-ipc = true
background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

padding-left = 0
padding-right = 2

module-margin-left = 1
module-margin-right = 2

font-0 = roboto:pixelsize=10;1
font-1 = Font Awesome 5 Free:size=10;1
font-2 = Font Awesome 5 Free Solid:size=10;1
font-3 = FontAwesome:size=10;1
font-4 = Segoe UI Symbol:pixelsize=10;1

modules-left = i3
;modules-center = xwindow
modules-right = spotify previous playpause next xbacklight pulseaudio filesystem memory cpu updates wlan eth battery temperature date time powermenu

tray-position = right
tray-padding = 2
;tray-background = #0063ff

;wm-restack = bspwm
;wm-restack = i3

override-redirect = true


;scroll-up = i3wm-wsnext
;scroll-down = i3wm-wsprev

cursor-click = pointer
cursor-scroll = ns-resize


[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
pin-workspaces = true
wrapping-scroll = false

ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-3 = 4;4
ws-icon-4 = 5;5
ws-icon-5 = 6;6
ws-icon-6 = 7;
ws-icon-7 = 8;
ws-icon-8 = 9;
ws-icon-9 = 10;
ws-icon-default = 

label-mode-padding = 2
label-mode-foreground = #000
label-mode-background = ${colors.primary}

; focused = Active workspace on focused monitor
label-focused = %icon%
label-focused-background = ${colors.ws-focused-background}
label-focused-underline= ${colors.ws-focused-underline}
label-focused-padding = 2

; unfocused = Inactive workspace on any monitor
label-unfocused = %icon% 
label-unfocused-padding = 2

; visible = Active workspace on unfocused monitor
label-visible = %icon% 
label-visible-background = ${self.label-focused-background}
label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = %icon%
label-urgent-background = ${colors.alert}
label-urgent-padding = 2

; Separator in between workspaces
; label-separator = |


[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%


[module/previous]
type = custom/script
interval = 5
format = "%{T3}<label>"
format-padding = 5
; Previous song icon
exec = echo ""
; Check if spotify is running before displaying the icon
exec-if = "pgrep spotify"
format-underline = ${colors.spotify}
line-size = 1
click-left = "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Previous"


[module/next]
type = custom/script
interval = 5 
format = "%{T3}<label>"
format-padding = 5
; Next song icon
exec = echo ""
; Check if spotify is running before displaying the icon
exec-if = "pgrep spotify"
format-underline = ${colors.spotify}
line-size = 1
click-left = "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Next"


[module/playpause]
type = custom/ipc
; Default
hook-0 = echo ""
; Playing
hook-1 = echo ""
; Paused
hook-2 = echo ""
initial = 1
format-underline = ${colors.spotify}
line-size = 1
click-left = "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause"


[module/spotify]
type = custom/ipc
hook-0 = echo ""
hook-1 = python3 ~/.submodules/install/polybar-spotify-controls/scripts/spotify/spotify_status.py
initial = 1
format-padding = 4
format-underline = ${colors.spotify}
line-size = 1
; [i3wm only] - Uncomment the below line to focus on Spotify when clicking on the song name (credits to https://github.com/Esya)
click-left = i3-msg '[class="Spotify"] focus'


[module/mpd]
type = internal/mpd
format-online = <label-song>  <icon-prev> <icon-stop> <toggle> <icon-next>

icon-prev = 
icon-stop = 
icon-play = 
icon-pause = 
icon-next = 

label-song-maxlen = 25
label-song-ellipsis = true


[module/pulseaudio]
type = internal/pulseaudio

format-volume = <label-volume> <bar-volume>
label-volume = VOL %percentage%%
label-volume-foreground = ${root.foreground}

label-muted = 🔇 muted
label-muted-foreground = ${colors.alert}

bar-volume-width = 10
bar-volume-foreground-0 = ${colors.icon}
bar-volume-foreground-1 = ${colors.icon}
bar-volume-foreground-2 = ${colors.icon}
bar-volume-foreground-3 = ${colors.icon}
bar-volume-foreground-4 = ${colors.icon}
bar-volume-foreground-5 = ${colors.icon}
bar-volume-foreground-6 = ${colors.icon}
bar-volume-gradient = false
bar-volume-indicator = |
bar-volume-indicator-font = 2
bar-volume-indicator-foreground = ${colors.icon}
bar-volume-fill = ─
bar-volume-fill-foreground = ${colors.icon}
bar-volume-fill-font = 2
bar-volume-empty = ─
bar-volume-empty-font = 2
bar-volume-empty-foreground = ${colors.foreground-alt}


[module/updates]
type=custom/script

exec = echo $(yay -Pu | wc -l)
exec-if = [  $(yay -Pu | wc -l) -ne "0" ]
tail = true

label = %output%

format-prefix = " "
format-prefix-foreground = ${colors.icon}
format-prefix-background = ${colors.background}

format = <label>
format-foreground = ${colors.foreground}
format-background = ${colors.background}

click-left = st sh -c 'yay -Syyu; sh'

interval = 90


[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /

format-mounted-prefix = 
format-mounted-prefix-foreground = ${colors.icon}
format-mounted-underline = ${colors.primary}
format-mounted-foreground = ${colors.foreground}

label-mounted = " %percentage_used%%"
label-mounted-foreground = ${colors.foreground}

label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.icon}

format-unmounted-underline = ${colors.primary}


[module/xbacklight]
type = internal/xbacklight

format = <label> <bar>
label = BL

bar-width = 10
bar-indicator = |
bar-indicator-foreground = ${colors.icon} 
bar-indicator-font = 2
bar-fill = ─
bar-fill-font = 2
bar-fill-foreground = ${colors.icon}
bar-empty = ─
bar-empty-font = 2
bar-empty-foreground = ${colors.foreground-alt}


[module/memory]
type = internal/memory
interval = 2

format-prefix = " "
format-prefix-foreground = ${colors.icon}
format-underline = ${colors.secondary}
label = %percentage_used%%
label-foreground = ${colors.foreground}


[module/cpu]
type = internal/cpu
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.icon}
format-underline = ${colors.tertiary}

label = %percentage:2%%
label-foreground = ${colors.foreground}


[module/wlan]
type = internal/network
interface = wlp2s0
interval = 3.0

format-connected = <ramp-signal> <label-connected>
format-connected-underline = ${colors.quaternary}

label-connected = %essid%: %local_ip%
label-connected-foreground = ${colors.foreground}

format-disconnected =
;format-disconnected = <label-disconnected>
;format-disconnected-underline = ${self.format-connected-underline}
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${colors.foreground-alt}

ramp-signal-0 = 
ramp-signal-1 = 
ramp-signal-2 = 
ramp-signal-foreground = ${colors.icon}
ramp-signal-padding-left = 0
ramp-signal-padding-right = 7


[module/eth]
type = internal/network
interface = enp3s0
interval = 3.0

format-connected-underline = ${colors.quaternary}
format-connected-prefix = " "
format-connected-prefix-foreground = ${colors.icon}

label-connected = %local_ip%
label-connected-foreground = ${colors.foreground}

format-disconnected =
;format-disconnected = <label-disconnected>
;format-disconnected-underline = ${self.format-connected-underline}
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${colors.foreground-alt}


